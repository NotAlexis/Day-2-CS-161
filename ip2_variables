#include <iostream>
#include <iomanip>
#include <string>

using namespace std;

int main()

{

//declare
int numberStudents;
float armSpan;
float lineLength;


//initialize
numberStudents = 17;
armSpan = 29.275;
lineLength = numberStudents * armSpan;

//output

cout << numberStudents << " students,"
   << " with average arm span of " << armSpan << " inches," << endl;
cout << "can create a line that is " << lineLength << " inches long." << endl;

return 0;
}
